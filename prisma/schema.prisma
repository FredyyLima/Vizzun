generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CLIENT
  PROFESSIONAL
}

enum PersonType {
  CPF
  CNPJ
}

model User {
  id           String     @id @default(cuid())
  role         UserRole
  personType   PersonType
  name         String?
  birthDate    DateTime?
  cpf          String?    @unique
  rg           String?
  cnpj         String?    @unique
  companyName  String?
  tradeName    String?
  contactName  String?
  contactEmail String?
  contactPhone String?
  email        String     @unique
  phone        String
  services     String?
  passwordHash String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([role])
}
